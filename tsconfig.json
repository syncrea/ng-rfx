{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "rfx-lib": [
        "projects/rfx-lib/src/public_api"
      ],
      "rfx-lib/*": [
        "projects/rfx-lib/src/*"
      ],
      "ng-rfx": [
        "projects/rfx-lib/src/public_api"
      ],
      "ng-rfx/*": [
        "projects/rfx-lib/src/*"
      ]
    }
  }
}
